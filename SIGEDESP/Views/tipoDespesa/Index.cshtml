@model IEnumerable<TipoDespesaModel>

    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-5"></div>
        <a class="btn btn-success mx-2" asp-controller="TipoDespesa" asp-action="Cadastrar">Cadastrar Novo Tipo de Despesa</a>
    </div>

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">Descrição</th>
        </tr>
    </thead>
    <tbody>
        @if(Model!=null)
        {
            @foreach(var TipoDespesa in Model)
            {
                <tr>
                    <th scope="row">@TipoDespesa.Descricao</th>
                </tr>
                <td>
                <a asp-controller="tipoDespesa" asp-action="Editar" class="btn btn-warning mx-2">Editar</a>
                <a asp-controller="tipoDespesa" asp-action="Excluir" class="btn btn-danger mx-2">Excluir</a>
                </td>
            }
        }
    </tbody>
</table>